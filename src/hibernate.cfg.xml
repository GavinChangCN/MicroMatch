<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

<session-factory>
	<!--配置SQLServer连接属性-->
	<property name="connection.url">jdbc:mysql://localhost:3306/micromatch</property>
	<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
	<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
	
	<!-- 服务器使用 -->
	<property name="connection.username">root</property>
	<property name="connection.password">12345</property>
	
	<!-- 本地使用 -->
	<!-- <property name="connection.username">root</property> -->
	<!-- <property name="connection.password">12345</property> -->
	<property name="javax.persistence.validation.mode">none</property>
	<!-- 是否显示sql   -->
  	<property name="show_sql">true</property>
 	<!-- 是否格式化sql -->
  	<property name="format_sql">true</property>
  	<!-- 是否使用注释  -->
  	<property name="use_sql_comments">true</property>
	<!--根据需要自动生成、更新数据表-->
	<property name="hbm2ddl.auto">update</property>
	<property name="current_session_context_class">thread</property>

	<!-- 数据库实体对应 -->
	<mapping class="MicroMatch.Entity.UserEntity" />
	<mapping class="MicroMatch.Entity.AccessoryEntity"></mapping>
	<mapping class="MicroMatch.Entity.AttendCourseEntity"></mapping>
	<mapping class="MicroMatch.Entity.AudienceRecorderEntity"></mapping>
	<mapping class="MicroMatch.Entity.AwardEntity"></mapping>
	<mapping class="MicroMatch.Entity.ChapterEntity"></mapping>
	<mapping class="MicroMatch.Entity.ClassEntity"></mapping>
	<mapping class="MicroMatch.Entity.CommentEntity"></mapping>
	<mapping class="MicroMatch.Entity.CourseEntity"></mapping>
	<mapping class="MicroMatch.Entity.DownloadRecorderEntity"></mapping>
	<mapping class="MicroMatch.Entity.ExamCheckEntity"></mapping>
	<mapping class="MicroMatch.Entity.MatchEntity"></mapping>
	<mapping class="MicroMatch.Entity.RegistrationEntity"></mapping>
	<mapping class="MicroMatch.Entity.StudentClassEntity"></mapping>
	<mapping class="MicroMatch.Entity.SubjectEntity"></mapping>
	<mapping class="MicroMatch.Entity.PollVoteEntity" />
	<mapping class="MicroMatch.Entity.IndexSubjectEntity"></mapping>
</session-factory>

</hibernate-configuration>
